@using PagedList.Mvc;
@model  PagedList.IPagedList<Model.EF.ChildrenCategory>
@{
    ViewBag.Title = "QUẢN LÝ DANH MỤC TRẺ EM";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<br />
<h2 style="padding-left:23px" class="heading_b uk-margin-bottom">QUẢN LÝ DANH MỤC TRẺ EM</h2>
<div class="md-card">
    <div class="md-card-content">
        @using (Html.BeginForm("Index", "ChildrenCategory", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-4 col-lg-8">
                    <input style="border: none; border-bottom: 2px solid lightgray" type="text" value="@ViewBag.SearchString" placeholder="NHẬP TỪ KHÓA" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">TÌM KIẾM</button>
                    <a class="btn btn-primary" href="/Admin/ChildrenCategory/Index">TẤT CẢ</a>
                    <a class="btn btn-primary" href="/Admin/ChildrenCategory/Create">THÊM MỚI</a>
                </div>
            </div>
        }
    </div>
</div>
<div class="md-card">
    <div class="md-card-content">
        <div class="uk-overflow-container uk-margin-bottom">
            <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_pager_filter">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="ts_checkbox_all"></th>
                        <th>TÊN DANH MỤC</th>
                        <th>MÔ TẢ</th>
                        <th>TẠO BỞI</th>
                        <th id="center">TRẠNG THÁI</th>
                        <th class="filter-false remove sorter-false uk-text-center">TÙY CHỌN</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>TÊN DANH MỤC</th>
                        <th>MÔ TẢ</th>
                        <th>TẠO BỞI</th>
                        <th id="center">TRẠNG THÁI</th>
                        <th class="filter-false remove sorter-false uk-text-center">TÙY CHỌN</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.ID">
                            <td><input type="checkbox" data-md-icheck class="ts_checkbox"></td>
                            <td><a href="@Url.Action("Details", "ChildrenCategory", new { id = item.ID })">@item.Name</a></td>
                            <td>@item.MetaDescriptions</td>
                            <td>@if (item.ModifiedBy == null) {@item.CreatedBy} else { @item.ModifiedBy}</td>
                            <td style="padding-left: 35px"><a id="status_@item.ID" onclick="ChangeStatus(@item.ID)">@(item.Status ? Html.Raw("<i class='material-icons uk-text md-color-light-blue-600 md-24'></i>") : Html.Raw("<i class='material-icons md-color-red-600 md-24'></i>"))</a></td>
                            <td class="uk-text-center">
                                <a href="@Url.Action("Edit", "ChildrenCategory", new { id = item.ID })"><img src="~/Assets/admin/img/edit.png" style="width:30px"></a>
                                <a onclick="RemoveItem(@item.ID)"><img src="~/Assets/admin/img/delete.png" style="width:30px;"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
        </div>
    </div>
</div>
<script>
    function RemoveItem(id) {
        if (confirm("Bạn có chắc xóa không?")) {
            $.ajax({
                type: "POST",
                url: '/Admin/ChildrenCategory/Delete',
                data: { id: id },
                success: function () {
                    alert("Data has been deleted successfully.");
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
        }
    }
    let changeStatus = false;
    function ChangeStatus(id) {
        if (confirm("Bạn có chắc đổi không?")) {
            $.ajax({
                type: 'POST',
                url: '/Admin/ChildrenCategory/ChangeStatus',
                data: { id: id },
                success: function (data) {
                    //self.parent().parent().remove();
                    if (changeStatus == true) {
                        changeStatus = false;
                        $("#status_" + id).html("<i class='material-icons md-color-red-600 md-24'></i>");
                    }
                    else {
                        changeStatus = true;
                        $("#status_" + id).html("<i class='material-icons md-color-light-blue-600 md-24'></i>");
                    }
                },
                error: function () {
                    alert("Đã xảy ra lỗi! Vui lòng thử lại sau.")
                }
            })
        }
    }
</script>

