@using PagedList.Mvc;
@model PagedList.IPagedList<Model.EF.Education>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<br />
<h2 style="padding-left:23px" class="heading_b uk-margin-bottom">QUẢN LÝ DANH MỤC HỌC VẤN</h2>
<div class="md-card">
    <div class="md-card-content">
        @using (Html.BeginForm("Index", "Education", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-4 col-lg-8">
                    <input style="border: none; border-bottom: 2px solid lightgray" type="text" value="@ViewBag.SearchString" placeholder="NHẬP TỪ KHÓA" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">TÌM KIẾM</button>
                    <a class="btn btn-primary" href="/Admin/Education/Index">TẤT CẢ</a>
                    <a class="btn btn-primary" href="/Admin/Education/Create">THÊM MỚI</a>
                </div>
            </div>
        }
    </div>
</div>
<div class="md-card">
    <div class="md-card-content">
        <div class="uk-overflow-container uk-margin-bottom">
            <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_pager_filter">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="ts_checkbox_all"></th>
                        <th>MÃ HỌC VẤN</th>
                        <th>TÊN LOẠI HỌC VẤN</th>
                        <th>TẠO/CẬP NHẬT BỞI</th>
                        <th>NGÀY TẠO/CẬP NHẬT</th>
                        <th>TRẠNG THÁI</th>
                        <th class="filter-false remove sorter-false uk-text-center">TÙY CHỌN</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>MÃ HỌC VẤN</th>
                        <th>TÊN LOẠI HỌC VẤN</th>
                        <th>TẠO/CẬP NHẬT BỞI</th>
                        <th>NGÀY TẠO/CẬP NHẬT</th>
                        <th>TRẠNG THÁI</th>
                        <th class="filter-false remove sorter-false uk-text-center">TÙY CHỌN</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.ID">
                            <td><input type="checkbox" data-md-icheck class="ts_checkbox"></td>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@if (item.ModifiedBy == null) { @item.CreatedBy } else {@item.ModifiedBy}</td>
                            <td>@if (item.ModifiedDate == null) { @item.CreatedDate } else {@item.ModifiedDate}</td>
                            <td style="padding-left: 35px"><a title="Thay đổi trạng thái" id="status_@item.ID" onclick="ChangeStatus(@item.ID)">@(item.Status ? Html.Raw("<i class='material-icons uk-text md-color-light-blue-600 md-24'></i>") : Html.Raw("<i class='material-icons md-color-red-600 md-24'></i>"))</a></td>
                            <td class="uk-text-center">
                                <a href="@Url.Action("Edit", "Education", new { id = item.ID })"><img src="~/Assets/admin/img/edit.png" style="width:30px"></a>
                                <input type="hidden" class="DeleteID" value="@item.ID" />
                                <a title="Xóa loại học vấn" class="removeByID"><img src="~/Assets/admin/img/delete.png" style="width:30px;"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
        </div>
    </div>
</div>
<script>
    let changeStatus = false;
    function ChangeStatus(id) {
        if (confirm("Bạn có chắc đổi không?")) {
            $.ajax({
                type: 'POST',
                url: '/Admin/Education/ChangeStatus',
                data: { id: id },
                success: function (data) {
                    //self.parent().parent().remove();
                    if (changeStatus == true) {
                        changeStatus = false;
                        $("#status_" + id).html("<i class='material-icons md-color-red-600 md-24'></i>");
                    }
                    else {
                        changeStatus = true;
                        $("#status_" + id).html("<i class='material-icons md-color-light-blue-600 md-24'></i>");
                    }
                },
                error: function () {
                    alert("Đã xảy ra lỗi! Vui lòng thử lại sau.")
                }
            })
        }
    }

    $('.removeByID').on('click', function () {
        var self = $(this);
        if (confirm("Bạn chắc xóa không?")) {
            loadingform();
            var MA = self.parent().find('.DeleteID').val();
            $.ajax({
                type: 'POST',
                url: '/Admin/Education/Delete',
                data: { id: MA },
                success: function (data) {
                    self.parent().parent().remove();
                    unloadingform();
                },
                error: function () {
                    unloadingform();
                }
            })
        }
    });
</script>

