    @model Model.EF.Employee

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })
        var editor1 = CKEDITOR.replace('txtDetails', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
        var editor2 = CKEDITOR.replace('txtAchievements', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<div id="page_content_inner">
    <h2 class="heading_b uk-margin-bottom">QUẢN LÝ THÔNG TIN NHÂN VIÊN</h2>
    <div class="md-card uk-margin-large-bottom">
        <div class="md-card-content">
            <h3 style="border: 1px solid rgb(33, 150, 243); padding: 15px 15px; background-color: rgb(33, 150, 243); color: white; font-size: 15px;">THÊM MỚI NHÂN VIÊN</h3>
            <div class="md-card-content">
                @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h3 style="color: rgb(124, 179, 66)">I. THÔNG TIN CƠ BẢN</h3>
                    <div class="uk-grid">
                        <div class="uk-width-1-3">
                            <label>@Html.DisplayNameFor(model => model.Code)<span class="req">*</span></label>
                            <input type="text" name="Code" id="Code" class="md-input" />
                        </div>
                        <div class="uk-width-1-3">
                            <label>@Html.DisplayNameFor(model => model.IdentityCard)<span class="req">*</span></label>
                            <input type="text" name="IdentityCard" id="IdentityCard" class="md-input" />
                        </div>
                        <div class="uk-width-1-3">
                            <div class="uk-form-row">
                                <label>@Html.DisplayNameFor(model => model.Name)<span class="req">*</span></label>
                                <input type="text" name="Name" id="Name" class="md-input" />
                            </div>
                        </div>
                    </div>
                    //BẢO HIỂM XÃ HỘI
                    <div class="uk-grid">
                        <p class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Age)<span class="req">*</span></label>
                            <input type="text" name="Age" id="Age" class="md-input" />
                        </p>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.Gender)<span class="req">*</span></label>
                                <select class="md-input" id="Gender" name="Gender" required="required">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Domicile)<span class="req">*</span></label>
                            <input type="text" name="Domicile" id="Domicile" class="md-input" />
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.DateOfBirth)<span class="req">*</span></label>
                                <input type="date" name="DateOfBirth" id="DateOfBirth" class="md-input" />
                            </div>
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.PlaceOfBirth)<span class="req">*</span></label>
                            <input type="text" name="PlaceOfBirth" id="PlaceOfBirth" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Religion)<span class="req">*</span></label>
                            <input type="text" name="Religion" id="Religion" value="Thiên chúa giáo" class="md-input" />
                        </div>

                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Phone)<span class="req">*</span></label>
                            <input type="text" name="Phone" id="Phone" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Education)<span class="req">*</span></label>
                            @Html.DropDownListFor(model => model.Education, ViewBag.Education as SelectList, new { @class = "md-input" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.StudiedAt)<span class="req">*</span></label>
                            <input type="text" name="StudiedAt" id="StudiedAt" class="md-input" />
                        </div>
                    </div>
                    <h3 style="color: rgb(33, 150, 243)">II. CÔNG VIỆC - HỢP ĐỒNG</h3>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Language)<span class="req">*</span></label>
                            <input type="text" name="Language" id="Language" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.InformationTechnology)<span class="req">*</span></label>
                            <input type="text" name="InformationTechnology" id="InformationTechnology" class="md-input" />
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Job)<span class="req">*</span></label>
                            <input type="text" name="Job" id="Job" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.JobName)<span class="req">*</span></label>
                            <input type="text" name="JobName" id="JobName" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.ContractType)<span class="req">*</span></label>
                            <input type="text" name="ContractType" id="ContractType" class="md-input" />
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.StartingSalagy)<span class="req">*</span></label>
                            <input type="text" name="StartingSalagy" id="StartingSalagy" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.GiftSalary)<span class="req">*</span></label>
                            <input type="text" name="GiftSalary" id="GiftSalary" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.AllOtherFoodExpenses)<span class="req">*</span></label>
                            <input type="text" name="AllOtherFoodExpenses" id="AllOtherFoodExpenses" class="md-input" />
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.WorkingContract)<span class="req">*</span></label>
                            <input type="text" name="WorkingContract" id="WorkingContract" class="md-input" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.WorkingDate)<span class="req">*</span></label>
                                <input type="date" name="WorkingDate" id="WorkingDate" class="md-input" />
                            </div>
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.StoppedWorkingDate)<span class="req">*</span></label>
                                <input type="date" name="StoppedWorkingDate" id="StoppedWorkingDate" class="md-input" />
                            </div>
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.CreatedBy)<span class="req">*</span></label>
                                @Html.DropDownListFor(model => model.CreatedBy, ViewBag.UserID as SelectList, "-- Vui lòng chọn người khởi tạo --", new { @class = "md-input", required = "required" })
                            </div>
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.CreatedDate)<span class="req">*</span></label>
                            <input type="text" name="CreatedDate" id="CreatedDate" class="md-input" value="@DateTime.Now.ToString()" />
                        </div>

                    </div>

                    <div class="uk-grid">
                        <label>@Html.DisplayNameFor(model => model.Image)<span class="req">*</span></label>
                        <div class="uk-width-1-1">
                            <div class="uk-form-file md-btn md-btn-success" id="btnSelectImage">
                                CHỌN
                            </div>
                            <div class="uk-form-file uk-text-primary"><input id="txtImage" name="Image" required class="k-input" readonly></div>
                        </div>
                    </div>
                    <br />
                    @*<div class="uk-width-large-1-4 uk-width-medium-1-2">
                <div class="uk-input-group">
                    <label>Button addon</label>
                    <input type="text" class="md-input" />
                    <span class="uk-input-group-addon"><a class="md-btn" href="#">Save</a></span>
                </div>
            </div>*@
                    <div class="uk-input-group">
                        <input type="submit" class="md-btn md-btn-primary" value="Tạo mới" />
                        <a href="@Url.Action("Index", "Employee")" class="md-btn md-btn-danger">HỦY BỎ</a>
                        <a href="@Url.Action("Index", "Employee")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
            '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
    })();
</script>