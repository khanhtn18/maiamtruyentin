@model Model.EF.Employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        var editor1 = CKEDITOR.replace('txtDetails', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
        var editor2 = CKEDITOR.replace('txtAchievements', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<div id="page_content_inner">
    <h2 class="heading_b uk-margin-bottom">QUẢN LÝ NHÂN VIÊN</h2>
    <div class="md-card uk-margin-large-bottom">
        <div class="md-card-content">
            <h3 style="border: 1px solid rgb(33, 150, 243); padding: 15px 15px; background-color: rgb(33, 150, 243); color: white; font-size: 15px;">CHỈNH SỬA THÔNG TIN NHÂN VIÊN</h3>
            <div class="md-card-content">
                @using (Html.BeginForm("Edit", "Employee", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h3 style="color: rgb(124, 179, 66)">I. THÔNG TIN CƠ BẢN</h3>
                    <div class="uk-grid">
                        <div class="uk-width-1-3">
                            <label>@Html.DisplayNameFor(model => model.Code)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Code, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-1-3">
                            <label>@Html.DisplayNameFor(model => model.IdentityCard)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.IdentityCard, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-1-3">
                            <div class="uk-form-row">
                                <label>@Html.DisplayNameFor(model => model.Name)<span class="req">*</span></label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "md-input form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="uk-grid">
                        <p class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Age)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Age, new { @class = "md-input form-control" })
                        </p>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Gender)<span class="req">*</span></label>
                            <select class="md-input" id="Gender" name="Gender" required="required">
                                <option value="@Model.Gender">@Model.Gender</option>
                                @if (Model.Gender == "Nam")
                                {@Html.Raw("<option value='Nữ'>Nữ</option>") }
                            else
                            { @Html.Raw("<option value='Nam'>Nam</option>")};
                            </select>
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Domicile)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Domicile, new { @class = "md-input form-control" })
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.DateOfBirth)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.PlaceOfBirth)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.PlaceOfBirth, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Religion)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Religion, new { @class = "md-input form-control" })
                        </div>

                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Phone)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Education)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Education, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.StudiedAt)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.StudiedAt, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <h3 style="color: rgb(33, 150, 243)">II. CÔNG VIỆC - HỢP ĐỒNG</h3>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Language)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Language, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.InformationTechnology)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.InformationTechnology, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Job)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Job, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.JobName)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.JobName, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.ContractType)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.ContractType, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.StartingSalagy)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.StartingSalagy, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.GiftSalary)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.GiftSalary, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.AllOtherFoodExpenses)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.AllOtherFoodExpenses, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.WorkingContract)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.WorkingContract, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.WorkingDate)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.WorkingDate, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.StoppedWorkingDate)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.StoppedWorkingDate, new { @class = "md-input form-control" })
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <div class="md-input-wrapper md-input-filled">
                                <label>@Html.DisplayNameFor(model => model.ModifiedBy)<span class="req">*</span></label>
                                @Html.DropDownListFor(model => model.ModifiedBy, ViewBag.UserID as SelectList, "-- Vui lòng chọn người cập nhật --", new { @class = "md-input form-control", required = "required" })
                            </div>
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.ModifiedDate)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.ModifiedDate, new { @class = "md-input form-control" })
                        </div>

                    </div>
                    <div class="uk-grid">
                        <label>@Html.DisplayNameFor(model => model.Image)<span class="req">*</span></label>
                        <div class="uk-width-1-1">
                            <div class="uk-form-file md-btn md-btn-success" id="btnSelectImage">
                                Select
                            </div>
                            <div class="uk-form-file uk-text-primary"><input id="txtImage" name="Image" value="@Model.Image" class="k-input" readonly></div>

                            <div style="padding-top: 2%">
                                <a href="@Model.Image" data-uk-lightbox="{group:'user-photos'}">
                                    <img src="@Model.Image" style="width:10%" alt="" /> (Hình hiện tại)
                                </a>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="uk-input-group">
                        <input type="submit" class="md-btn md-btn-primary" value="CẬP NHẬT" />
                        <a href="@Url.Action("Index", "Employee")" class="md-btn md-btn-danger">HỦY BỎ</a>
                        <a href="@Url.Action("Index", "Employee")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    let changeStatus = false;
    function ChangeStatus(id) {
        $.ajax({
            type: 'POST',
            url: '/Admin/Employee/ChangeStatus',
            data: { id: id },
            success: function (data) {
                //self.parent().parent().remove();
                if (changeStatus == true) {
                    changeStatus = false;
                    $("#status_" + id).html("<i class='material-icons md-color-red-600 md-24'></i>");
                }
                else {
                    changeStatus = true;
                    $("#status_" + id).html("<i class='material-icons md-color-light-blue-600 md-24'></i>");
                }
            },
            error: function () {
                alert("Đã xảy ra lỗi! Vui lòng thử lại sau.")
            })
    }
</script>