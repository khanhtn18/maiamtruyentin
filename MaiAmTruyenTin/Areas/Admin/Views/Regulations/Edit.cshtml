@model Model.EF.Regulation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        var editor1 = CKEDITOR.replace('txtDetails', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
        var editor2 = CKEDITOR.replace('txtAchievements', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<div id="page_content_inner">
    <h2 class="heading_b uk-margin-bottom">QUẢN LÝ QUY ĐỊNH</h2>
    <div class="md-card uk-margin-large-bottom">
        <div class="md-card-content">
            <h3 style="border: 1px solid rgb(33, 150, 243); padding: 15px 15px; background-color: rgb(33, 150, 243); color: white; font-size: 15px;">THÊM MỚI QUY ĐỊNH</h3>
            <div class="md-card-content">
                @using (Html.BeginForm("Edit", "Regulations", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Name)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Code)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Code, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.MetaTitle)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.MetaTitle, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.CategoryID)<span class="req">*</span></label>
                            @Html.DropDownListFor(model => model.CategoryID, ViewBag.CategoryList as SelectList, new { @class = "md-input" })
                        </div>
                    </div>
                    <div class="uk-grid uk-grid-width-medium-1-2" data-uk-grid-margin>
                        <div class="parsley-row">
                            <div class="uk-input-group">
                                <span class="uk-input-group-addon">
                                    <i class="material-icons">&#xE0CD;</i>
                                </span>
                                <label>@Html.DisplayNameFor(model => model.Phone)<span class="req">*</span></label>
                                @Html.TextBoxFor(model => model.Phone, new { @class = "md-input form-control" })
                            </div>
                        </div>
                        <div class="parsley-row">
                            <div class="uk-input-group">
                                <span class="uk-input-group-addon">
                                    <i class="material-icons">&#xE0BE;</i>
                                </span>
                                <label>@Html.DisplayNameFor(model => model.Email)<span class="req">*</span></label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "md-input form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Address)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Manager)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Manager, new { @class = "md-input form-control" })
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.Money)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.Money, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.DisabilityID)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.DisabilityID, new { @class = "md-input form-control" })
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.MetaDescriptions)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.MetaDescriptions, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.MetaKeywords)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "md-input form-control" })
                        </div>
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.CreatedDate)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.CreatedDate, new { @class = "md-input form-control" })
                        </div>
                        <div class="uk-width-medium-1-2 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.CreatedBy)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.CreatedBy, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-medium-1-3 parsley-row">
                            <p>
                                <label>TRẠNG THÁI<span class="req">*</span></label>
                                @if (Model.Status == false)
                                {
                                    <input type="checkbox" name="Status" value="@Model.Status" data-md-icheck>
                                }
                                else
                                {
                                    <input type="checkbox" name="Status" value="@Model.Status" data-md-icheck>
                                }
                            </p>
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.ModifiedDate)<span class="req">*</span></label>
                            <input type="text" name="ModifiedDate" id="ModifiedDate" required class="md-input" value="@DateTime.Now.ToString()" />
                        </div>
                        <div class="uk-width-medium-1-3 parsley-row">
                            <label>@Html.DisplayNameFor(model => model.ModifiedBy)<span class="req">*</span></label>
                            @Html.TextBoxFor(model => model.ModifiedBy, new { @class = "md-input form-control" })
                        </div>
                    </div>
                    <div class="uk-grid">
                        <div class="uk-width-1-1">
                            <div class="uk-form-row">
                                <label>@Html.DisplayNameFor(model => model.Description)<span class="req">*</span></label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "md-input form-control" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Details)<span class="req">*</span></label>
                        @Html.TextAreaFor(model => model.Details, new { htmlAttributes = new { @class = "md-input form-control" }, id = "txtDetails" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Achievements)<span class="req">*</span></label>
                        @Html.TextAreaFor(model => model.Achievements, new { htmlAttributes = new { @class = "md-input form-control" }, id = "txtAchievements" })
                        @Html.ValidationMessageFor(model => model.Achievements, "", new { @class = "text-danger" })
                    </div>

                    <div class="uk-grid">
                        <div class="uk-width-medium-1-1 parsley-row" style="display: inline">
                            <label for="Image">ẢNH ĐẠI DIỆN (609x406)</label>
                            <br />
                            <div class="uk-form-file md-btn lg md-btn-success" id="btnSelectImage">
                                <input style="width:100%" placeholder="Chọn hình ảnh..." class="form-control" id="txtImage" name="Image" readonly title="Vui lòng click vào để upload hình ảnh" />
                            </div>
                        </div>
                    </div>
                    <br />
                    @*<div class="uk-width-large-1-4 uk-width-medium-1-2">
                            <div class="uk-input-group">
                                <label>Button addon</label>
                                <input type="text" class="md-input" />
                                <span class="uk-input-group-addon"><a class="md-btn" href="#">Save</a></span>
                            </div>
                        </div>*@
                    <div class="uk-input-group">
                        <input type="submit" class="md-btn md-btn-primary" value="CẬP NHẬT" />
                        <a href="@Url.Action("Index", "Regulations")" class="md-btn md-btn-danger">HỦY BỎ</a>
                        <a href="@Url.Action("Index", "Regulations")" class="md-btn md-btn-warning">QUAY LẠI DANH SÁCH</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    let changeStatus = false;
    function ChangeStatus(id) {
        $.ajax({
            type: 'POST',
            url: '/Admin/Regulations/ChangeStatus',
            data: { id: id },
            success: function (data) {
                //self.parent().parent().remove();
                if (changeStatus == true) {
                    changeStatus = false;
                    $("#status_" + id).html("<i class='material-icons md-color-red-600 md-24'></i>");
                }
                else {
                    changeStatus = true;
                    $("#status_" + id).html("<i class='material-icons md-color-light-blue-600 md-24'></i>");
                }
            },
            error: function () {
                alert("Đã xảy ra lỗi! Vui lòng thử lại sau.")
            })
    }
</script>